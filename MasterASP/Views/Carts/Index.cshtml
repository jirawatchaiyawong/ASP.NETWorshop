@model IEnumerable<MasterASP.Models.Cart>

@{
    ViewBag.Title = "Index";
}

<h2>รถเข็น</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>จำนวน</p>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discontinued)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @ViewBag.CountProduct;
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Discontinued)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CartId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CartId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CartId })
        </td>
    </tr>
}

</table>
