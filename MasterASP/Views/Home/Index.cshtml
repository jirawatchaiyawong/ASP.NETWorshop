@{
    ViewBag.Title = "Home Page";
}
<style>
   

    
    img-box {
        max-width: 100px;
        max-height: 100px;
    }

    .img-box img {
        width: 80%;
        height:80%;
    }
</style>


<div class="container-fluid" style="margin-top:2em;">
    <div class="bg-color">
        <div class="text-center" >
            <img src="https://mercular.s3.ap-southeast-1.amazonaws.com/images/products/2019/09/SabbatE12Ultra-3.jpg" style="width:60%">
        </div>

        <div>

            <div class="banner-title text-center" style="margin-top:2em;" >
                <h1>หูฟังถูกใจ เสียงใสใช่เลย</h1>
                <p>เลือกช็อปได้ตามใจ</p>
            </div>

        </div>

        <div class="product-item bg-color">
            <div class=" text-center">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <div class="card  mb-4" >
                                <div class="card-header ">
                                    <div class="img-box">
                                        <img src="~/@item.ImageProduct" />
                                    </div>
                                </div>
                                <div class="card-center  " style="margin-bottom:3em;">

                                    <h4>@item.ProductName</h4>
                                    <p>ราคา @string.Format("{0:n}", @item.UnitPrice) บาท</p>
                                </div>
                                
                                <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Detail", "ProductView", "Products", new { id = item.ProductId }, null)</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>